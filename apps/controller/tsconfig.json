{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2019",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    // "noEmit": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "paths": {
      /*
        The following two serve different purposes:
         - @foo/* is for importing types only,
         - .../lib/* means require dependency
      */
      "@injected/*": [
        "./src/playwright/injected/src/*"
      ],
      "@isomorphic/*": [
        "./src/playwright/isomorphic/*"
      ],
      "@protocol/*": [
        "./src/playwright/protocol/src/*"
      ],
      "@recorder/*": [
        "./src/playwright/recorder/src/*"
      ],
    },
  },
  "exclude": [
    "playwright.config.ts"
  ]
}